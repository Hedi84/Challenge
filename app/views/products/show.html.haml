%ul
  %li
    title:
    = @product.title
  %li
    description:
    = @product.description
  %li
    creation date:
    = @product.creation_date

  %p Categories for this product:
  %ul
  - @product.matches.each do |match|
    %li #{link_to match.category.name, category_path(match.category)} - #{link_to "Delete", match_path(match), method: :delete, data: { confirm: 'Are you sure you want to remove the product from this category?' }}


  %p
    Add this project to another #{link_to "category", new_product_match_path(@product)}
  %p
    #{link_to "Update", edit_product_path(@product)} this product.


